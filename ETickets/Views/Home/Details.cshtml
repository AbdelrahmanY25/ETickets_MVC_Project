@model Movie

<!DOCTYPE html>
<html>
    <head>
        <meta name="viewport" content="width=device-width" />
        <title>Details</title>
    </head>
    <body>

        <div class="container mt-4">
            <div class="details-container">
                    <!-- Movie Image -->
                    <div class="image-container">
                        <img src="~/images/movies/@Model.ImgUrl" alt="">
                    </div>

                    <div class="details-content">
                        <h1>@Model.Name</h1>
                        <p class="price">Price: $@Model.Price</p>
                        <p><strong>Cinema:</strong> @Model.Cinema.Name</p>
                        <p><strong>Start Date:</strong> @Model.StartDate</p>
                        <p><strong>End Date:</strong> @Model.EndDate</p>
                        <p><strong>Category:</strong> @Model.Category.Name</p>
                        <p>@Model.Description</p>

                        <h3>Cast:</h3>
                        <div class="actors">
                            @foreach (var actor in ViewBag.actors)
                            {
                                <a href="/Actor/Details/?actorId=@actor.Id"><img src="~/images/cast/@actor.ProfilePicture" /></a>
                            }
                        </div>

                        <iframe width="100%" height="315"
                                src="https://www.youtube.com/embed/e924b196-cbe8-4155-bf70-adaff272a597"
                                frameborder="0" allow="autoplay; encrypted-media">
                        </iframe>
                    </div>
                <div class="btn-container">
                    <a asp-action="Index" class="btn btn-dark">Back to List</a>
                 </div>
             </div>
        </div>
    </body>
</html>

<style>
    /* Adding some styles for the details page */
    .details-container {
        display: flex;
        flex-wrap: wrap;
        padding: 20px;
    }

        .details-container .image-container {
            flex: 1 1 50%;
            max-width: 600px;
            margin: 0 auto;
            padding: 20px;
        }

        .details-container img {
            width: 100%;
            height: auto;
            border-radius: 10px;
            box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
        }

    .details-content {
        flex: 1 1 50%;
        padding: 20px;
    }

        .details-content h1 {
            font-size: 2rem;
            margin-bottom: 15px;
        }

        .details-content p {
            font-size: 1rem;
            margin: 10px 0;
        }

        .details-content .price {
            font-size: 1.5rem;
            color: #ff4757;
            font-weight: bold;
        }

    .actors {
        margin-top: 20px;
        display: flex;
        flex-wrap: wrap;
    }

        .actors img {
            width: 50px;
            height: 50px;
            border-radius: 50%;
            margin-right: 10px;
        }

    iframe {
        margin-top: 20px;
        border-radius: 10px;
        box-shadow: 0 4px 20px rgba(0, 0, 0, 0.1);
    }

    .btn-container {
        text-align: center;
        margin-top: 30px;
    }

        .btn-container a {
            margin: 10px;
        }
</style>